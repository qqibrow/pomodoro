<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerVertical="true"
        android:id="@+id/taskSelectCheckBox" />

    <TextView
            android:id="@+id/tvName"
            android:layout_toRightOf="@id/taskSelectCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#040404"
            android:layout_centerVertical="true"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold" />

    <!--  ListRow Right side show pomodoro  -->
    <RelativeLayout android:id="@+id/show_pomodoro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_marginRight="0dip"
        android:layout_alignParentRight="true"
        >

        <!-- Rightend Arrow -->
        <ImageView
            android:id = "@+id/ic_pomodoro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tomato2"
           />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="15dip"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/ic_pomodoro"
            android:layout_centerVertical="true"
            android:text="*7" />

    </RelativeLayout>

</RelativeLayout>